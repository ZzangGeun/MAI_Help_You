{
  "openapi": "3.0.3",
  "info": {
    "title": "MAI Help You - Main Page API",
    "description": "메이플스토리 AI 챗봇 프로젝트의 메인 페이지 API 명세서",
    "version": "1.0.0",
    "contact": {
      "name": "MAI Help You Team",
      "email": "support@maihelpyou.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "개발 서버"
    },
    {
      "url": "https://api.maihelpyou.com",
      "description": "프로덕션 서버"
    }
  ],
  "tags": [
    {
      "name": "Pages",
      "description": "페이지 렌더링 관련 API"
    },
    {
      "name": "Notices",
      "description": "공지사항 관련 API"
    },
    {
      "name": "Ranking",
      "description": "랭킹 관련 API"
    },
    {
      "name": "Character",
      "description": "캐릭터 검색 관련 API"
    },
    {
      "name": "Auth",
      "description": "인증 관련 API"
    },
    {
      "name": "Chatbot",
      "description": "챗봇 관련 API"
    },
    {
      "name": "System",
      "description": "시스템 관련 API"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": ["Pages"],
        "summary": "메인 페이지 렌더링",
        "description": "메인 페이지를 렌더링합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 메인 페이지를 렌더링",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string",
                  "example": "<!DOCTYPE html><html>...</html>"
                }
              }
            }
          }
        }
      }
    },
    "/character-info/": {
      "get": {
        "tags": ["Pages"],
        "summary": "캐릭터 정보 페이지 렌더링",
        "description": "캐릭터 정보 페이지를 렌더링합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 캐릭터 정보 페이지를 렌더링",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/signup/": {
      "get": {
        "tags": ["Pages"],
        "summary": "회원가입 페이지 렌더링",
        "description": "회원가입 페이지를 렌더링합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 회원가입 페이지를 렌더링",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/login/": {
      "get": {
        "tags": ["Pages"],
        "summary": "로그인 페이지 렌더링",
        "description": "로그인 페이지를 렌더링합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 로그인 페이지를 렌더링",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/notice/": {
      "get": {
        "tags": ["Notices"],
        "summary": "전체 공지사항 조회",
        "description": "모든 공지사항을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 공지사항을 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoticeListResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/notice-cashshop/": {
      "get": {
        "tags": ["Notices"],
        "summary": "캐시샵 공지사항 조회",
        "description": "캐시샵 관련 공지사항을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 캐시샵 공지사항을 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoticeResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/notice-update/": {
      "get": {
        "tags": ["Notices"],
        "summary": "업데이트 공지사항 조회",
        "description": "게임 업데이트 관련 공지사항을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 업데이트 공지사항을 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoticeResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/notice-event/": {
      "get": {
        "tags": ["Notices"],
        "summary": "이벤트 공지사항 조회",
        "description": "이벤트 관련 공지사항을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 이벤트 공지사항을 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NoticeResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/ranking-overall/": {
      "get": {
        "tags": ["Ranking"],
        "summary": "전체 랭킹 조회",
        "description": "전체 캐릭터 랭킹을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 전체 랭킹을 조회",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RankingResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/character-search/": {
      "get": {
        "tags": ["Character"],
        "summary": "캐릭터 검색",
        "description": "캐릭터 이름으로 캐릭터 정보를 검색합니다.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "description": "검색할 캐릭터 이름",
            "schema": {
              "type": "string",
              "example": "캐릭터명"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공적으로 캐릭터를 검색",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CharacterSearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (캐릭터 이름 누락)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "캐릭터를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/login/": {
      "post": {
        "tags": ["Auth"],
        "summary": "사용자 로그인",
        "description": "사용자 로그인을 처리합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공적으로 로그인",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (필수 파라미터 누락, 잘못된 JSON 형식)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/logout/": {
      "get": {
        "tags": ["Auth"],
        "summary": "사용자 로그아웃",
        "description": "사용자 로그아웃을 처리합니다.",
        "responses": {
          "200": {
            "description": "성공적으로 로그아웃",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LogoutResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/chatbot/": {
      "post": {
        "tags": ["Chatbot"],
        "summary": "챗봇 요청",
        "description": "챗봇에게 질문을 전송하고 답변을 받습니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatbotRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공적으로 챗봇 응답을 받음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChatbotResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (질문 누락, 잘못된 JSON 형식)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 내부 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/health/": {
      "get": {
        "tags": ["System"],
        "summary": "헬스 체크",
        "description": "시스템 상태를 확인합니다.",
        "responses": {
          "200": {
            "description": "시스템이 정상 상태",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "500": {
            "description": "시스템이 비정상 상태",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Notice": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "공지사항 ID",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "공지사항 제목",
            "example": "공지사항 제목"
          },
          "content": {
            "type": "string",
            "description": "공지사항 내용",
            "example": "공지사항 내용"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "공지사항 날짜",
            "example": "2024-01-01"
          },
          "type": {
            "type": "string",
            "description": "공지사항 타입",
            "enum": ["notice", "cashshop", "update", "event"],
            "example": "notice"
          }
        }
      },
      "NoticeListResponse": {
        "type": "object",
        "properties": {
          "notices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Notice"
            },
            "description": "공지사항 목록"
          },
          "total_count": {
            "type": "integer",
            "description": "전체 공지사항 수",
            "example": 10
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "NoticeResponse": {
        "type": "object",
        "properties": {
          "notices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Notice"
            },
            "description": "공지사항 목록"
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "RankingItem": {
        "type": "object",
        "properties": {
          "rank": {
            "type": "integer",
            "description": "랭킹 순위",
            "example": 1
          },
          "character_name": {
            "type": "string",
            "description": "캐릭터 이름",
            "example": "캐릭터명"
          },
          "world_name": {
            "type": "string",
            "description": "서버 이름",
            "example": "루나"
          },
          "class_name": {
            "type": "string",
            "description": "직업 이름",
            "example": "키네시스"
          },
          "sub_class_name": {
            "type": "string",
            "description": "서브 직업 이름",
            "example": "키네시스"
          },
          "character_level": {
            "type": "integer",
            "description": "캐릭터 레벨",
            "example": 300
          },
          "character_exp": {
            "type": "integer",
            "description": "캐릭터 경험치",
            "example": 123456789
          },
          "character_popularity": {
            "type": "integer",
            "description": "캐릭터 인기도",
            "example": 1000
          },
          "character_guildname": {
            "type": "string",
            "description": "길드 이름",
            "example": "길드명"
          }
        }
      },
      "RankingResponse": {
        "type": "object",
        "properties": {
          "ranking": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RankingItem"
            },
            "description": "랭킹 목록"
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "Character": {
        "type": "object",
        "properties": {
          "character_name": {
            "type": "string",
            "description": "캐릭터 이름",
            "example": "캐릭터명"
          },
          "world_name": {
            "type": "string",
            "description": "서버 이름",
            "example": "루나"
          },
          "character_class": {
            "type": "string",
            "description": "직업 이름",
            "example": "키네시스"
          },
          "character_class_level": {
            "type": "integer",
            "description": "캐릭터 레벨",
            "example": 300
          },
          "character_exp": {
            "type": "integer",
            "description": "캐릭터 경험치",
            "example": 123456789
          },
          "character_exp_rate": {
            "type": "string",
            "description": "경험치 비율",
            "example": "99.99%"
          },
          "character_guild_name": {
            "type": "string",
            "description": "길드 이름",
            "example": "길드명"
          },
          "character_image": {
            "type": "string",
            "format": "uri",
            "description": "캐릭터 이미지 URL",
            "example": "https://example.com/character.png"
          }
        }
      },
      "CharacterSearchResponse": {
        "type": "object",
        "properties": {
          "character": {
            "$ref": "#/components/schemas/Character",
            "description": "캐릭터 정보"
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["user_id", "password"],
        "properties": {
          "user_id": {
            "type": "string",
            "description": "사용자 ID",
            "example": "testuser"
          },
          "password": {
            "type": "string",
            "description": "비밀번호",
            "example": "password123"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "이메일 (선택)",
            "example": "user@example.com"
          },
          "nickname": {
            "type": "string",
            "description": "닉네임 (선택)",
            "example": "닉네임"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "응답 메시지",
            "example": "로그인 성공"
          },
          "token": {
            "type": "string",
            "description": "JWT 토큰",
            "example": "jwt_token_for_testuser"
          },
          "user": {
            "type": "object",
            "properties": {
              "user_id": {
                "type": "string",
                "description": "사용자 ID",
                "example": "testuser"
              },
              "nickname": {
                "type": "string",
                "description": "닉네임",
                "example": "닉네임"
              },
              "email": {
                "type": "string",
                "format": "email",
                "description": "이메일",
                "example": "user@example.com"
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "LogoutResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "응답 메시지",
            "example": "로그아웃이 완료되었습니다."
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "ChatbotRequest": {
        "type": "object",
        "required": ["question"],
        "properties": {
          "question": {
            "type": "string",
            "description": "질문 내용",
            "example": "메이플스토리에서 키네시스는 어떤 직업인가요?"
          },
          "user_id": {
            "type": "string",
            "description": "사용자 ID (선택)",
            "example": "testuser"
          },
          "nickname": {
            "type": "string",
            "description": "닉네임 (선택)",
            "example": "닉네임"
          }
        }
      },
      "ChatbotResponse": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string",
            "description": "챗봇 답변",
            "example": "키네시스는 메이플스토리의 마법사 계열 직업으로..."
          },
          "status": {
            "type": "string",
            "enum": ["success"],
            "description": "응답 상태",
            "example": "success"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy"],
            "description": "시스템 상태",
            "example": "healthy"
          },
          "timestamp": {
            "type": "number",
